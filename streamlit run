import streamlit as st
import pickle

with open("sentiment_model.pkl", "rb") as f:
    model = pickle.load(f)

with open("tfidf_vectorizer.pkl", "rb") as f:
    vectorizer = pickle.load(f)

st.title("ðŸ“Š Sentiment Analysis App")
st.write("Enter a product review and find out if itâ€™s Positive or Negative.")
user_review = st.text_area("Type your review here:")

if st.button("Analyze Sentiment"):
    if user_review.strip():
        # Transform and predict
        user_tfidf = vectorizer.transform([user_review])
        prediction = model.predict(user_tfidf)[0]
        sentiment = "ðŸ˜Š Positive" if prediction == 1 else "ðŸ˜ž Negative"
        st.subheader(f"Prediction: {sentiment}")
    else:
        st.warning("Please enter a review before analyzing.")
